<%= render "shared/error_messages", model: @song %>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(@song, :html => {class: "form-horizontal", role: "form"}) do |f| %>

    <div class="form-group">
      <div class="control-label col-sm-4">
        <%= f.label :title %>
      </div>
      <div class="control-label col-sm-4">
        <%= f.text_field :title, class: "form-control", placeholder: "Title", autofocus: true %>
      </div>
    </div>

    <div class="form-group">
      <div class="control-label col-sm-4">
        <%= f.label :released %>
      </div>
      <div class="control-label col-sm-4">
        <%= f.text_field :released, class: "form-control", placeholder: "Dec 08 1974", autofocus: true %>
      </div>
    </div>

    <div class="form-group">
      <div class="control-label col-sm-4">
        <%= f.label :duration %>
      </div>
      <div class="control-label col-sm-4">
        <%= f.text_field :duration, class: "form-control", placeholder: "10 min.", autofocus: true %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-4 col-sm-12">
        <%= f.submit(@song.new_record? ? "Create a song" : "Edit a song", class: "btn btn-primary btn-lg") %>
      </div>
    </div>
      <% end %>
   </div>
 </div>
